@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Tank.Financing.Localization
@using Tank.Financing.Web.Pages.Applies
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Tank.Financing.Applies;
@using System.Globalization
@inject IHtmlLocalizer<FinancingResource> L
@model EditModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/Applies/EditModal" autocomplete="off">
    <abp-modal>
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>

        <abp-modal-body>
            <abp-input asp-for="Id" />
            
            <abp-input asp-for="Apply.EnterpriseName"/>

            <abp-input asp-for="Apply.Organization"/>

            <abp-input asp-for="Apply.ProductName"/>

            <abp-input asp-for="Apply.Allowance"/>

            <abp-input asp-for="Apply.APR"/>

            <abp-input asp-for="Apply.Period"/>

            <abp-select asp-for="Apply.ApplyStatus"/>

            <abp-select asp-for="Apply.GuaranteeMethod"/>

            <abp-input asp-for="Apply.ApplyTime"/>

            <abp-input asp-for="Apply.PassedTime"/>

            
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>